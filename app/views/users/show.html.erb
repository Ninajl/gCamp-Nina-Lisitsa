

<div class=page-header>
  <div class=pull-right>
    <% if current_user.id == @user.id || current_user.admin == true %>
      <%= link_to 'Edit', edit_user_path, class: 'btn btn-info' %>
      <%= link_to 'Delete', user_path(@user), method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
      <% end %>
</div>
<h1><strong><%= @user.fullname %></strong></h1>
</div>

<ol class="breadcrumb">
<li><a href="/users">Users</a></li>
<li class="active"><%= @user.fullname %></li>
</ol>

<dl class=dl-horizontal>
  <p><dt><strong>First name</strong></dt><p>
  <p><dd><%= @user.first_name %></dd></p

  <p><dt><strong>Last name</strong></dt></p>
  <p><dd><%= @user.last_name %></dd></p>

  <% if current_user.id == @user.id %>

  <p><dt><strong>Email</strong></dt></p>
  <p><dd><%= mail_to @user.email %></dd></p>

  <% end %>
</dl>
