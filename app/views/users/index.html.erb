

<div class=page-header>
<div class=pull-right>
  <%= link_to 'New User', new_user_path, class:'btn btn-info' %>
</div>
<h1>Users</h1>
</div>


<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th colspan='3'></th>
  </tr>
</thead>
  <tbody>
<% @users.each do |user| %>
<tr>
  <td><%= link_to user.fullname, user_path(user) %></td>
  <td><%= mail_to user.email %></td>
  <td><div class=text-right><%= link_to 'Edit', edit_user_path(user), class:'btn btn-primary' %></td>
    <td><%= link_to 'Delete', user, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %></div></td>
</tr>
<% end %>
</table>
