

<div class=page-header>
<div class=pull-right>
  <%= link_to 'New User', new_user_path, class:'btn btn-info' %>
</div>
<h1>Users</h1>
</div>


<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th colspan='3'></th>
  </tr>
</thead>
  <tbody>
<% @users.each do |user| %>
<tr>
  <td><%= link_to user.fullname, user_path(user) %></td>
  <% if current_user.admin == true || current_user.projects.any? { |project| project.users.include?(user) }  %>
  <td><%= mail_to user.email %></td>
  <% else %>
  <td></td>
  <% end %>
  <% if current_user.admin == true || user == current_user %>
  <td class=pull-right><%= link_to 'Edit', edit_user_path(user) %>
  <%= link_to 'Delete', user, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
  </td>
  <% else %>
  <td></td>
  <% end %>
</tr>
<% end %>
</tbody>
</table>
