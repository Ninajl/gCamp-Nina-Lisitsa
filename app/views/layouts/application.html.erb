<!DOCTYPE html>
<html>
<head>
  <title>GCamp_NJL</title>
  <%= favicon_link_tag 'pink_butterfly.png' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>

  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">

      <div class="navbar-header">
        <a class="navbar-brand" href="/">gCamp</a>
      </div>
        <ul class="nav navbar-nav navbar-right">
              <% if current_user %>
              <li><%= link_to current_user.email, @user  %></li>
              <li><%= link_to "Sign Out", signout_path %></li>
              <% else %>
              <li><%= link_to "Sign Up", signup_path %></li>
              <li><%= link_to "Sign In", signin_path %></li>
              <% end %>
        </ul>
    </div>
  </nav>

  <div class="container">

    <% if notice %>
    <center><div class="alert alert-success"><%= notice %>
    </div></center>

    <% elsif alert %>
      <center><div class="alert alert-danger"><%= alert %>
      </div></center>
    <% end %>

    <%= yield %>

    <hr>

    <footer>
      <div class="row">

        <div class="col-md-6">

          <%= link_to "About", about_path %>

          |

          <%=link_to "Terms", terms_path %>

          |

          <%=link_to "FAQ", faq_path %>

          |

          <%=link_to "Tasks", tasks_path %>

          |

          <%=link_to "Users", users_path %>

          |

          <%= link_to "Projects", projects_path %>

        </div>
        <div class="col-md-6 text-right">
          <a href="https://www.linkedin.com/in/ninajlisitsa">
            <%= image_tag('linked_in-f852478f8950eb3fca3367cb545aaa52.jpg',class: "img-footer") %></a>
            <a href="https://github.com/Ninajl">
              <%= image_tag('GitHub-de8164cc6a609537cfdab331e002ebb3.png', class: "img-footer") %></a>
              <a href="https://twitter.com/Ninajl">
                <%= image_tag('Twitter-0c8c529fb7181e05ab5c30416e3a70fa.png',class: "img-footer") %></a>
                <a href="https://students.gschool.it/cohorts/9/students/220">
                  <%= image_tag('galvanize-g-b3da24895ed7d4fd33c43d9226c16242.png', class: "img-footer") %></a>
                </div>
              </div>
            </footer>
          </div>
          <!-- /container -->


          <!-- Bootstrap core JavaScript
          ================================================== -->
          <!-- Placed at the end of the document so the pages load faster -->
          <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
          <script src="../../dist/js/bootstrap.min.js"></script>
          <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
          <script src="../../assets/js/ie10-viewport-bug-workaround.js"></script>

        </body>
        </html>
