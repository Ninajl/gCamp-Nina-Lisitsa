
<div class="container">
  <div class="jumbotron">
    <h1>TaskMe!</h1>
    <p>Your life, organized</p>
  </div>

<div class="row">

    <div class="col-md-4">
      <p class="lead">
      <%= image_tag('panel1-8969237967_c5960fc544_b.jpg', class: "img-responsive") %>
      </p>
    <div class= "panel panel-primary">
      <div class="panel-heading">Tasks</div>
      <div class="panel-body home panel">
        <p>Grouped by projects and lists, just the way you like'em</p>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <p class="lead">
      <%= image_tag('panel2-8864977481_713b7cbda5_b.jpg', class: "img-responsive") %>
    </p>
    <div class="panel panel-primary">
      <div class="panel-heading">Documents</div>
      <div class="panel-body home-panel">
        <ul>
          <li>Upload</li>
          <li>Comment</li>
          <li>Revive</li>
        </ul>
      </div>
    </div>
  </div>


  <div class="col-md-4">
    <p class="lead">
      <%= image_tag('panel3-8203794182_8004f8f636_b.jpg', class: "img-responsive") %>
    </p>
    <div class="panel panel-primary">
      <div class="panel-heading">Comments</div>
      <div class="panel-body home panel">
        <ul>
          <li>Comment on tasks and documents</li>
          <li>Get email notifications</li>
        </ul>
      </div>
    </div>
  </div>

</div>

<% @quotes.each do |author, quote| %>
  <p class="quote"><%= quote %></p>
  <em><p class="text-muted">-<%= author %> </p></em>
  <% end %>

</div>

