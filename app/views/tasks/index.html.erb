

<div class=page-header>
  <div class=pull-right>
    <%= link_to 'New Task', new_project_task_path, class:"btn btn-info" %>
  </div>
  <h1>Tasks</h1>
</div>

<ol class="breadcrumb">
  <li><a href="/projects">Projects</a></li>
  <li class="active"><%= @project.name %></li>
  <li class="active"><%= @tasks %></li>
</ol>


<table class=table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Due Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project.tasks.each do |task| %>
    <tr>
      <td><%= link_to task.description, project_task_path(@project, task) %></td>
      <td><%= task.task_due_date.to_s.gsub("-", "/") %></td>
      <td><div class=text-right><%= link_to 'Edit', edit_project_task_path(@project, task), class: "btn btn-info" %>
        <%= link_to 'Destroy', project_task_path(@project, task), method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-danger" %></div></td>
      </div>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
