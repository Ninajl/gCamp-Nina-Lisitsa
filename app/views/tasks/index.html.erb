

<div class=page-header>
  <div class=pull-right>
    <%= link_to 'New Task', new_project_task_path, class:"btn btn-info" %>
  </div>
  <h1>Tasks for <%= @project.name %></h1>
</div>

<ol class="breadcrumb">
  <li><a href="/projects">Projects</a></li>
  <li class="active"><%= link_to @project.name, project_path(@project) %></li>
  <li class="active">Tasks</li>
</ol>


<table class=table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Complete</th>
      <th>Due Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project.tasks.each do |task| %>
    <tr>
      <td><%= task.description %></td>
      <% if task.completed = true %>
      <td><%= task.completed %></td>
      <% end %>
      <td><%= task.task_due_date.to_s.gsub("-", "/") %></td>
      <td><div class=text-right>
        <%= link_to 'Show', project_task_path(@project, task), class: "btn btn-success" %>
        <%= link_to 'Edit', edit_project_task_path(@project, task), class: "btn btn-info" %>
        <%= link_to 'Delete', project_task_path(@project, task), method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-danger" %>
        </div></td>
      </div>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
